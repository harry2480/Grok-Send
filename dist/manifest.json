{
  "manifest_version": 3,
  "name": "Grok Send Fix",
  "version": "1.0.0",
  "description": "Prevents accidental sending with Enter on Grok (x.ai)",
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-BWiY-zwI.js"
      ],
      "matches": [
        "https://grok.com/*",
        "https://x.ai/*",
        "https://x.com/i/grok*",
        "https://twitter.com/i/grok*"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://grok.com/*",
        "https://twitter.com/*",
        "https://x.ai/*",
        "https://x.com/*"
      ],
      "resources": [
        "assets/index.ts-BWiY-zwI.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
